{
	"name": "receiver-bot",
	"version": "0.0.1",
	"description": "A proof-of-concept recorder bot using @discordjs/voice",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"build": "rimraf dist && tsc",
		"build:check": "tsc --noEmit --incremental false",
		"deploy": "npm run build && node --env-file=.env dist/util/deploy.js",
		"lint": "prettier --cache --check . && eslint src --ext mjs,js,ts --cache",
		"format": "prettier --cache --write . && eslint src --ext mjs,js,ts --fix --cache",
		"start": "pnpm run build && node --env-file=.env dist/index.js"
	},
	"author": "Amish Shah <amishshah.2k@gmail.com>",
	"license": "MIT",
	"dependencies": {
		"@discordjs/opus": "^0.10.0",
		"@discordjs/voice": "^0.19.0",
		"discord.js": "^14.25.1",
		"node-crc": "^1.3.2",
		"prism-media": "^2.0.0-alpha.0"
	},
	"devDependencies": {
		"@types/node": "^22.19.1",
		"eslint": "^8.57.1",
		"eslint-config-neon": "^0.1.62",
		"prettier": "^3.7.3",
		"rimraf": "^6.1.2",
		"typescript": "5.9.3"
	}
}
