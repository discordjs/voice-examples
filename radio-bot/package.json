{
	"name": "discord-radio-bot",
	"version": "1.0.0",
	"description": "A proof-of-concept radio bot for @discordjs/voice",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"build": "rimraf dist && tsc",
		"build:check": "tsc --noEmit --incremental false",
		"lint": "prettier --cache --check . && eslint src --ext mjs,js,ts --cache",
		"format": "prettier --cache --write . && eslint src --ext mjs,js,ts --fix --cache",
		"start": "npm run build && node --env-file=.env dist/index.js"
	},
	"keywords": [
		"discord",
		"radio",
		"bot",
		"audio",
		"speakers",
		"hardware",
		"dj"
	],
	"author": "Amish Shah <amishshah.2k@gmail.com>",
	"license": "UNLICENSE",
	"dependencies": {
		"@discordjs/voice": "^0.17.0",
		"discord.js": "^14.15.3",
		"libsodium-wrappers": "^0.7.13",
		"prism-media": "^2.0.0-alpha.0"
	},
	"devDependencies": {
		"@types/node": "^20.14.7",
		"eslint": "^8.57.0",
		"eslint-config-neon": "^0.1.62",
		"prettier": "^3.3.2",
		"rimraf": "^5.0.7",
		"typescript": "5.4.5"
	}
}
